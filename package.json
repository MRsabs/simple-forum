{
  "name": "sitea-forum",
  "version": "1.0.0",
  "description": "forum-restAPI",
  "scripts": {
    "start": "ts-node --transpile-only -r tsconfig-paths/register src/server.ts",
    "dev": "nodemon",
    "lint": "eslint {src,test}/**/*.ts --ext .ts --fix && prettier --write \"{src,test}/**/*.ts\"",
    "test": "npm run lint && tap --no-ts --node-arg=--require=ts-node/register/transpile-only"
